{
    "plugins": [
        "import",
        "jsx-a11y",
        "react"
    ],
    "extends": "airbnb",
    "rules": {
        // override defaults
        "import/no-extraneous-dependencies": [
            "error", {
                "devDependencies": true,
                "optionalDependencies": false,
                "peerDependencies": false
            }
        ],
        "import/first": "off",
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4]
    }
}
